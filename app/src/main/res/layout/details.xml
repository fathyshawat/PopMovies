<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#939ced"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ln"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ln"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/img"
            android:text="2018"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/vote_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_tv"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img"
            android:text="6.9"
            android:textColor="#000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vote_tv"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img"
            android:background="#0F0"
            android:minHeight="40dp"
            android:padding="5dp"
            android:text="favourit" />

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_fav"
            android:layout_margin="10dp"
            android:text="this is a comedy film"
            android:textColor="#D3D3D3"
            android:textSize="15dp" />

        <TextView

            android:id="@+id/textTrailers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_tv"
            android:paddingTop="10dp"
            android:text="Trailers:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ListView
            android:id="@+id/list_trialer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textTrailers"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/textReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_trialer"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:text="Review:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ListView
            android:id="@+id/listReview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textReview"
            android:layout_marginTop="15dp"
            android:paddingBottom="10dp" />
    </RelativeLayout>
</ScrollView>